<h3>Orders</h3>
<table class="table">
  <thead>
    <tr >
      <th class="col-lg-1"><%= link_to "Id", :sort => "id"%> </th>
      <th class="col-lg-1"><%= link_to "Customer Name", :sort => "customer_name"%> </th>
      <th class="col-lg-1 text-right"><%= link_to "Created at", :sort => "created_at"%> </th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= link_to "#{order.customer_name}", order_path(order.id) %></td><td>
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </thead>
</table>
