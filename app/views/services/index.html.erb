<%= link_to 'Main page', root_path %>
<br>
<hr>
<%= link_to 'new service', new_service_path %>
<hr>

<h3>services</h3>
<table class="table">
  <thead>
  <tr >
    <th class="col-lg-1"><%= link_to "Id", :sort => "id"%> </th>
    <th class="col-lg-2"><%= link_to "Title", :sort => "title"%> </th>
    <th class="col-lg-1 text-right"><%= link_to "Created at", :sort => "created_at"%> </th>
  </tr>
  <% @services.each do |service| %>
    <tr>
      <td><%= service.id %></td>
      <td><%= link_to "#{service.title}", service_path(service.id) %></td><td>
      <td><%= service.created_at %></td>
    </tr>
  <% end %>
  </thead>
</table>
<hr>

<% @services.each do |service|
%>
  <p><%= link_to service.title, service_path(service.id) %>
  </p>
  <small>
    <i><%= service.title %>, <%= service.created_at.in_time_zone('Moscow').strftime("%H:%m %d.%m.%Y")%></i>
  </small>
  <%= link_to 'edit', edit_service_path(service.id) %>
  <%= link_to 'delete', service_path(service.id), method: :delete, data: { confirm: 'are you sure?'} %>
  <hr />
<% end %>
