<br />
<%= link_to 'back to services', services_path %>
<h1>
  New service
</h1>
<%= form_with(model: @service) do |form| %>

  <%#= @user.errors.full_messages.join(", ") if @user.errors.present? %>

  <% @service.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :order %>
    <%= form.collection_select :order, Order.all, :id, :customer_name%>
  </div>
  <hr>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>
